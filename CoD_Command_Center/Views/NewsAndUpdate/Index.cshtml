@model IEnumerable<CoD_Command_Center.Models.NewsAndUpdate>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ArticleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticleDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ACreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AUpdatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ACreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AUpdatedAt)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
